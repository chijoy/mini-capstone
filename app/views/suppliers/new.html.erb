<h1> Create a New Pet Product </h1>

<%= form_tag '/suppliers', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number %>
  </div>

  <div>
    <%= label_tag :supplier_id %>
    <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  </div>


  <div>
    <%= submit_tag "Create it!" %>
  </div>
<% end %>