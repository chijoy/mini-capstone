<h1> Create a New Pet Product </h1>

<% @product.errors.full_messages.each do |error| %>
  <h3> <%= error %></h3>
<% end %>

<%= form_tag '/products', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>

  <div>
    <%= label_tag :supplier_id %>
    <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  </div>


  <div>
    <%= submit_tag "Create it!" %>
  </div>
<% end %>